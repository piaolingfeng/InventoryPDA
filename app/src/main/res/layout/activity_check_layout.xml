<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pda.birdex.pda.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_marginTopPercent="@string/item_padding_3w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_taking_num"
                    android:textColor="@color/context_1"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />

                <TextView
                    android:id="@+id/tv_taking_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_2"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_5w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_marginTopPercent="@string/item_padding_3w"
                app:layout_marginBottomPercent="@string/item_padding_3w">

                <TextView
                    android:id="@+id/tv_print_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taking_num"
                    android:textColor="@color/context_1"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />

                <TextView
                    android:id="@+id/tv_taking_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_2"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_5w" />


            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/area"
                        android:textColor="@color/context_1"
                        app:layout_paddingTopPercent="@string/item_padding_3w"
                        app:layout_paddingLeftPercent="@string/item_padding_3w"
                        app:layout_paddingRightPercent="@string/item_padding_3w"
                        app:layout_textSizePercent="@string/size_6w" />

                    <Button
                        android:id="@+id/tv_check_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rect_fullbluew_selector"
                        android:text="@string/check_map"
                        android:textColor="@color/btn_blue_selector"
                        app:layout_marginRightPercent="@string/margin_5w"
                        app:layout_textSizePercent="@string/size_5w" />
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_1"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_5w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/box_size"
                    android:textColor="@color/context_1"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />

                <TextView
                    android:id="@+id/tv_box_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_2"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_paddingTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_5w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_paddingTopPercent="@string/item_padding_3w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/operation_history"
                    android:textColor="@color/context_1"
                    app:layout_paddingLeftPercent="@string/item_padding_3w"
                    app:layout_paddingRightPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_marginLeftPercent="@string/item_padding_3w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/operation_man"
                        android:textColor="@color/context_2"
                        app:layout_paddingLeftPercent="@string/item_padding_3w"
                        app:layout_textSizePercent="@string/size_5w_h" />


                    <TextView
                        android:id="@+id/tv_operation_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/context_2"
                        app:layout_paddingLeftPercent="@string/item_padding_3w"
                        app:layout_textSizePercent="@string/size_5w_h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_marginLeftPercent="@string/item_padding_3w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        android:textColor="@color/context_2"
                        app:layout_paddingLeftPercent="@string/item_padding_3w"
                        app:layout_textSizePercent="@string/size_5w_h" />


                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/context_2"
                        app:layout_paddingLeftPercent="@string/item_padding_3w"
                        app:layout_textSizePercent="@string/size_5w_h" />

                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>