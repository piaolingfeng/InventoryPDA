<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_paddingPercent="@string/item_padding_3w">

        <TextView
            android:id="@+id/no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_vessel_no"
            android:textColor="@color/context_1"
            app:layout_marginBottomPercent="@string/item_padding_3w"
            app:layout_textSizePercent="@string/size_6w" />


        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/context_2"
            app:layout_textSizePercent="@string/size_6w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_paddingPercent="@string/item_padding_3w">

            <TextView
                android:id="@+id/tv_printnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_select_y"
                android:text="@string/printnew"
                android:textColor="@color/white"
                app:layout_paddingPercent="@string/item_padding_3w" />

            <TextView
                android:id="@+id/tv_printsame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_select_n"
                android:text="@string/printsame"
                android:textColor="@color/blue_head_1"
                app:layout_paddingPercent="@string/item_padding_3w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_paddingPercent="@string/item_padding_3w">

            <TextView
                android:id="@+id/tv_print_copies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/print_count"
                android:textColor="@color/context_1"
                app:layout_marginBottomPercent="@string/item_padding_3w"
                app:layout_textSizePercent="@string/size_6w" />

            <com.pda.birdex.pda.widget.ClearEditText
                android:id="@+id/edt_print_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_tv"
                android:singleLine="true"
                android:inputType="number"
                android:text="1" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/pll_print_copies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_paddingPercent="@string/item_padding_3w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/print_each_copies"
                android:textColor="@color/context_1"
                app:layout_marginBottomPercent="@string/item_padding_3w"
                app:layout_textSizePercent="@string/size_6w" />

            <com.pda.birdex.pda.widget.ClearEditText
                android:id="@+id/edt_print_copies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@+id/no_tv"
                android:singleLine="true"
                android:text="1" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_fullbluew_selector"
                android:text="@string/print"
                android:textColor="@color/btn_blue_selector"
                app:layout_marginBottomPercent="@string/size_5w"
                app:layout_textSizePercent="@string/size_6w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
