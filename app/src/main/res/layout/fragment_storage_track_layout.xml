<?xml version="1.0" encoding="utf-8"?>
<com.pda.birdex.pda.widget.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_paddingPercent="@string/item_padding_3w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count_vessel_no"
                android:textColor="@color/context_1"
                app:layout_textSizePercent="@string/size_6w" />

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pda.birdex.pda.widget.ClearEditText
                    android:id="@+id/edt_vessel_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/context_2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_vessel_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_2"
                    app:layout_marginTopPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_out"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border_y"
                    android:gravity="center"
                    android:text="@string/storage_track_out"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_in"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border_n"
                    android:gravity="center"
                    android:text="@string/storage_track_in"
                    android:textColor="@color/context_2" />

            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_paddingPercent="@string/item_padding_3w">


            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/count_relevance_no"
                    android:textColor="@color/context_1"
                    app:layout_marginBottomPercent="@string/item_padding_3w"
                    app:layout_textSizePercent="@string/size_6w" />

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rect_fullbluew_selector"
                    android:text="@string/edit"
                    android:textColor="@color/btn_blue_selector"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="@string/size_5w"
                    app:layout_textSizePercent="@string/size_5w" />
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pda.birdex.pda.widget.ClearEditText
                    android:id="@+id/edt_storage_old_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/context_2" />

                <TextView
                    android:id="@+id/tv_storage_old_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/context_2"
                    android:visibility="gone"
                    app:layout_textSizePercent="@string/size_6w" />

            </com.zhy.android.percent.support.PercentRelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/rect_fullblue_n"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/upc"
                        android:textColor="@color/context_1"
                        app:layout_textSizePercent="@string/size_6w" />

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.pda.birdex.pda.widget.ClearEditText
                            android:id="@+id/edt_upc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/context_2" />

                        <TextView
                            android:id="@+id/tv_upc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/context_2"
                            android:visibility="gone"
                            app:layout_marginTopPercent="@string/item_padding_3w"
                            app:layout_textSizePercent="@string/size_6w" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/amount"
                        android:textColor="@color/context_1"
                        app:layout_textSizePercent="@string/size_6w" />

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <com.pda.birdex.pda.widget.ClearEditText
                            android:id="@+id/edt_amout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@color/context_2" />

                        <TextView
                            android:id="@+id/tv_amout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/context_2"
                            android:visibility="gone"
                            app:layout_marginTopPercent="@string/item_padding_3w"
                            app:layout_textSizePercent="@string/size_6w" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/rect_fullblue_n"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/storage_track_message" />

            </RelativeLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_fullbluew_selector"
                android:text="@string/submit"
                android:textColor="@color/btn_blue_selector"
                app:layout_marginBottomPercent="@string/size_5w"
                app:layout_textSizePercent="@string/size_6w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.pda.birdex.pda.widget.MyScrollview>