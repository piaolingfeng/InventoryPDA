<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/loginup" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="70%">

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/username_hint"
            android:singleLine="true"
            android:textColor="#979797"
            app:layout_marginLeftPercent="1%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C7C7C7"
            app:layout_marginTopPercent="2%" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#979797"
            app:layout_marginLeftPercent="1%"
            app:layout_marginTopPercent="8%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C7C7C7"
            app:layout_marginTopPercent="2%" />

        <CheckBox
            android:id="@+id/remember_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="5dp"
            android:text="记住密码"
            android:textColor="#979797"
            app:layout_marginLeftPercent="2%"
            app:layout_marginTopPercent="5%" />


        <Button
            android:id="@+id/login_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/rect_fullbluew_selector"
            android:text="@string/login"
            android:textColor="@color/btn_blue_selector"
            android:textSize="20sp"
            app:layout_marginTopPercent="12%"
            app:layout_paddingBottomPercent="5%w"
            app:layout_paddingLeftPercent="25%w"
            app:layout_paddingRightPercent="25%w"
            app:layout_paddingTopPercent="5%w" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logindown"
            app:layout_marginTopPercent="15%" />


    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>